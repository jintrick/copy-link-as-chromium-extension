{
    "manifest_version": 3,
    "name": "Copy Link As",
    "description": "Copy the current page's URL in various formats",
    "version": "1.2.0",
    "options_ui": {
      "page": "./options.html",
      "open_in_tab": true
    },
    "action": {
      "default_popup": "./popup.html"
    },

    "permissions": [
      "storage",
      "clipboardWrite",
      "activeTab",
      "scripting",
      "commands"
    ]
  }